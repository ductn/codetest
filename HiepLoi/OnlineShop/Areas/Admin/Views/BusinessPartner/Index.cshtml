@model Model.EF.BusinessPartner
@using PagedList.Mvc;
@using Model.EF;
@using ClsCommon;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/ecab/_Layouts.cshtml";
}
@section header{
    Danh sách thông tin đối tác
}
@section jsFooter{
    <script src="~/assets/jscontroller/BusinessPartnerController.js"></script>
    <script src="~/assets/layout/jsindex.js"></script>
    <script>
        function funcLamMoi() {
            window.location.href = window.location.href;
        }
    </script>
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            @*<div class="panel-heading">
                    Danh sách người dùng
                </div>*@

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "BusinessPartner", FormMethod.Post, new { id = "searchFrom" }))
                {
                    <div class="row form-group">
                        <div class="col-md-10">
                            <div class="SubjectTitle" id="SInfor" runat="server">
                                <legend class="SubjectTitle">
                                    <img alt="" src="@CommonConstants.DomainName/assets/ecab/img/arrow_showless.gif" id="img1" />
                                    <a id="B1" href="#">Tìm kiếm</a>&nbsp;&nbsp;
                                </legend>
                            </div>
                        </div>
                        <div class="col-md-2">
                            @if (ViewBag.classDeleteMulti == "true")
                            {
                                <a href="javascript:void(0)" title="Xóa nhiều" id="btnDeleteAll" class="btn btn-danger btn-sm pull-right" style="margin-left:5px;"><i class="fa fa-trash-o"></i></a>
                            }
                            @if (ViewBag.classCreate == "true")
                            {
                                <a class="btn btn-success btn-sm pull-right" href="~/Admin/BusinessPartner/Create"><i class="fa fa-plus"></i></a>
                            }
                        </div>
                    </div>
                    <div id="pnlSearch" class="SubjectTitle">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.TieuDe, "Tiêu đề", htmlAttributes: new { @class = "control-label col-lg-2 col-sm-2" })
                            <div class="col-lg-10 col-sm-10">
                                @Html.TextBoxFor(model => model.TieuDe, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-4">

                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <button type="button" class="btn btn-primary" onclick="funcLamMoi()">Làm mới</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" style="margin-bottom:0px">
                        <thead>
                            <tr>
                                <th width="1%" class="text-center"><label><input class="checkbox" type="checkbox" id="CheckAll" /></label></th>
                                <th width="5%" class="text-center">STT</th>
                                <th width="40%" class="text-center">Tiêu đề</th>
                                <th width="35%" class="text-center">Hình ảnh</th>
                                <th width="9%" class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var stt = 1;
                            }
                            @foreach (var item in ViewBag.ListBusinessPartner)
                            {
                                <tr id="row_@item.Id">
                                    <td class="text-center"><input class="checkbox checkSingle" type="checkbox" data-id="@item.Id" /></td>
                                    <td class="text-center">@stt</td>
                                    <td><a data-id="@item.Id" data-status="" data-controller="/Admin/BusinessPartner/View/@item.Id" class="btn-view"> @item.TieuDe</a></td>
                                    <td><img src="@CommonConstants.DomainName/@item.Image" style="max-width: 100%; max-height: 100px" /></td>
                                    <td class="text-center">
                                        @if (ViewBag.classEdit == "true")
                                        {
                                            <a title="Sửa" class="btn btn-primary btn-xs m-b-10 btn-edit" href="~/Admin/BusinessPartner/Edit/@item.Id"><i class="fa fa-pencil"></i></a>
                                        }
                                        @if (ViewBag.classDelete == "true")
                                        {
                                            <a title="Xóa" class="btn btn-danger btn-xs m-b-10 btn-delete" data-id="@item.Id"><i class="fa fa-trash-o"></i></a>
                                        }
                                    </td>
                                </tr>
                                stt = stt + 1;
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <!-- pagination -->
                <div class="row">
                    <div class="col-md-6 pull-left">
                        <div style="margin: 20px 0;">
                            <span style="float: left;line-height: 30px">Số bản ghi trên trang </span>
                            <span style="float: left;padding: 5px 5px;">
                                <select style="width:50px" size="1" id="filter_count_perpage">
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                            </span>
                            <span style="float: left;line-height: 30px;margin-right: 5px;">Hiển thị @ViewBag.fromRecord </span>
                            <span style="float: left;line-height: 30px"> đến @ViewBag.toRecord trong tổng số @ViewBag.Total bản ghi.</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @{
                            PagedList.IPagedList<BusinessPartner> listBusinessPartner = ViewBag.ListBusinessPartner;
                        }
                        @Html.PagedListPager(listBusinessPartner, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }), new PagedListRenderOptions
                        {
                       ContainerDivClasses = new string[] { "pull-right" },
                       FunctionToTransformEachPageLink = (li, a) =>
                       {
                           a.Attributes.Add("class", "page-link");
                           li.InnerHtml = a.ToString();
                           return li;
                       },
                       LiElementClasses = new[] { "page-item" },
                       LinkToFirstPageFormat = "«",
                       LinkToPreviousPageFormat = "Trước",
                       LinkToNextPageFormat = "Tiếp",
                       LinkToLastPageFormat = "»",
                       MaximumPageNumbersToDisplay = 5,
                       DisplayEllipsesWhenNotShowingAllPageNumbers = false,
                   })
                    </div>
                </div>
                <!-- /pagination -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>


