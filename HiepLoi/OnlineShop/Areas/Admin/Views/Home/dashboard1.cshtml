                <div class="card-body ">
                    <div id="example4_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                        @if (ViewBag.ShowDashboardBienTap == "true")
                        {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="textLogo"><i class="fa fa-pencil-square-o"></i>SOẠN THẢO - CHÍNH SÁCH ƯU ĐÃI <span style="color:red">[@ViewBag.totalRecordChinhSachDangSoan]</span></div>
