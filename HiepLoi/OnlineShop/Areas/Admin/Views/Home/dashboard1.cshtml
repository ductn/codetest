                                                <a style="margin-right:5px" class="btn btn-primary btn-xs m-b-10 btn-chuyenChinhSach" data-id="@itemChinhSachBoSung.Id" data-controller="ChinhSachUuDai"><i class="fa fa-mail-forward"></i> Luân chuyển</a>
                                            </div>
                                        </div>
                                    }
                                    <hr style="border-top: 1px dashed #8c8b8b">
                                </div>
                            </div>
                        }
                        @if (ViewBag.ShowDashboardPheDuyet == "true")
                        {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="textLogo"><i class="fa fa-pencil-square-o"></i>PHÊ DUYỆT - CHÍNH SÁCH ƯU ĐÃI <span style="color:red">[@ViewBag.totalRecordChinhSachChoDuyet]</span></div>
                                    @foreach (var itemChinhSachChoDuyet in ViewBag.dsChinhSachChoDuyet)
                                    {
                                        <div class="form-group row" style="color: #168ec2">
                                            <div class="col-sm-12">
                                                <b>Số hiệu : </b><i>@itemChinhSachChoDuyet.SoHieuVanBan</i>
                                            </div>
                                            <div class="col-sm-4">
                                                <b>Trích yếu : </b><i>@itemChinhSachChoDuyet.TrichYeu</i>
                                            </div>
                                            <div class="col-sm-4">
                                                <b>Ngày ban hành : </b><i>@itemChinhSachChoDuyet.NgayBanHanh</i>
                                            </div>
                                            <div class="col-sm-12">
                                                <a style="margin-right:5px" id="" class="btn btn-primary btn-xs m-b-10" title="Sửa" href="~/Admin/ChinhSachUuDai/Edit/@itemChinhSachChoDuyet.Id"><i class="fa fa-pencil"></i></a>
                                                <a style="margin-right:5px" class="btn btn-primary btn-xs m-b-10 btn-chuyenChinhSach" data-id="@itemChinhSachChoDuyet.Id" data-controller="ChinhSachUuDai"><i class="fa fa-mail-forward"></i> Luân chuyển</a>
                                            </div>
                                        </div>
