@model Model.EF.Menu

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/ecab/_Layouts.cshtml";
}

@section header{
    Thêm mới đơn vị
}
@section jsFooter{
    <script src="~/assets/jscontroller/MenuController.js"></script>
    <script>
        var editor = CKEDITOR.replace('Detail', {
            //customConfig: '~/Scripts/plugins/ckeditor/config.js',
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("Create", "Menu", FormMethod.Post, new { id = "formMenu", @class = "frmStyle" }))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group row">
                                @Html.LabelFor(model => model.ParentId, "Cấp cha", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-9 col-sm-9">
                                    @Html.DropDownListFor(model => model.ParentId, null, htmlAttributes: new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Text, "Tên", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-9 col-sm-9">
                                    @Html.TextBoxFor(model => model.Text, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Link, "Link", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-9 col-sm-9">
                                    @Html.TextBoxFor(model => model.Link, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.DisplayOrder, "Sắp xếp", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-9 col-sm-9">
                                    @Html.TextBoxFor(model => model.DisplayOrder, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Target, "Target", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-9 col-sm-9">
                                    <div class="checkbox">
                                        @Html.DropDownList("Target", new List<SelectListItem>
                                         {
                                               new SelectListItem { Text = "-Chọn-", Value = "0", Selected=true},
                                               new SelectListItem { Text = "_self", Value = "_self"},
                                               new SelectListItem { Text = "_blank", Value = "_blank"}
                                         }, htmlAttributes: new { @class = "form-control select2" })
                                        @Html.ValidationMessageFor(model => model.Target, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.TypeID, "Loại", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-9 col-sm-9">
                                    @Html.DropDownListFor(model => model.TypeID, null, htmlAttributes: new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.TypeID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Detail, "Mô tả", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-9 col-sm-9">
                                    @Html.TextAreaFor(model => model.Detail, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Status, "Kích hoạt", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-3 col-sm-3">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(model => model.Status)
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @Html.LabelFor(model => model.IsProduct, "Menu ngành hàng", htmlAttributes: new { @class = "control-label col-lg-3 col-sm-3" })
                                <div class="col-lg-3 col-sm-3">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(model => model.IsProduct)
                                        @Html.ValidationMessageFor(model => model.IsProduct, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="control-label col-md-3 col-sm-3 col-xs-3"></div>
                                <div class="col-md-offset-3 col-lg-9 col-sm-9">
                                    <button type="button" class="btn btn-sm btn-success btnSave" title="Lưu"><i class="fa fa-save"></i> Lưu</button>
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("Index", "Menu")" title="Hủy"><i class="fa fa-reply"></i> Hủy</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
