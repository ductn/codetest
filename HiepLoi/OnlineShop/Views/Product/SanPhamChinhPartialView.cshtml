@model List<Model.EF.Product>
@using ClsCommon;
@{ 
    List<Model.ViewModel.ProductCategoryUnitViewModel> NhomSanPhams = ViewBag.NhomSanPhams;
    int inum = 0;
}
<section class="vc_row pt-65 pb-65">
    <div class="mainProSlider">
        <div class="container">
            <div class="block-head-title d-flex mb-4">
                <img src="images/icon-mall-section.svg" alt="" class="mr-2">
                <h2>
                    Sản phẩm chính
                </h2>
            </div>
            <div class="row">
                <div class="lqd-column col-md-12">
                    <div class="carousel-container carousel-nav-left carousel-nav-md carousel-dots-style4">
                        <div id="SanPhamChinh" class="carousel-items row" data-lqd-flickity='{"cellAlign":"center","prevNextButtons":true,"buttonsAppendTo":"self","pageDots":true,"groupCells":true,"autoPlay":3000}'>
                            @foreach (var item in Model)
                            {
                                var link = CommonConstants.DomainName + "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                                var images = CommonConstants.DomainName + item.Image;
                                var Name = item.Name;
                                var CateName = item.CategoryID;
                                var Price = (item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ");
                                var GioHang = CommonConstants.DomainName + "/them-gio-hang?productId=" + item.ID + "&quantity=1";
                                var ProductCategoryParentId = "sanphamchinh" + item.ProductCategoryParentId;

                                <div class="lqd-column carousel-item col-md-2 col-sm-3 col-xs-4">
                                    <figure class="text-center">
                                        <div class="cate-item">
                                            <a class="cate-item-img-field" href="@link">
                                                <span class="cate-item-img-field-inner">
                                                    <img class="cate-item-img" src="@images" alt="@Name">
                                                </span>
                                            </a>
                                            <div class="cate-item-body">
                                                <a href="@link" class="cate-item-title">@Name</a>
                                            </div>
                                        </div> <!-- cate-item -->
                                    </figure>
                                </div>
                            }
                        </div><!-- /.carousel-items row -->
                    </div><!-- /.carousel-container -->
                </div><!-- /.col-md-12 -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div>
</section>